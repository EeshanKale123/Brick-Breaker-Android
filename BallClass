package com.example.eeshan.brickbreaker;

import android.graphics.Bitmap;
import android.graphics.Canvas;

import java.util.Random;

/**
 * Created by Eeshan on 2/26/2016.
 */
    public class BallClass {
    private Bitmap _bitmap;
    private GameViewClass _gameView;
    private Random _randVar;
    private static int _speedX;
    private static int _speedY = -30;
    private static int _positionX;
    private static int _positionY;

    public BallClass(GameViewClass $view, Bitmap $bitmap) {
        _gameView = $view;
        _bitmap = $bitmap;
        _positionX = _gameView.getWidth() - 400;
        _positionY = _gameView.getHeight() - 225;
        _randVar = new Random();
        _speedX = _randVar.nextInt(100-45)+5;
//        _speedY = _randVar.nextInt(-50)-5;

    }

    protected void onDraw(Canvas $canvas) {
        update();
        $canvas.drawBitmap(_bitmap, _positionX, _positionY, null);
    }

    protected void update() {
        if (_positionX > _gameView.getWidth() - _bitmap.getWidth() - _speedX || _positionX + _speedX < 0)
            _speedX = -_speedX;
        _positionX = _positionX + _speedX;
         if(_positionY>_gameView.getHeight()-_bitmap.getHeight()-_speedY||_positionY+_speedY<0)
            _speedY = -_speedY;
        _positionY = _positionY + _speedY;
        }
    public float getX(){
        //update();
        return _positionX;
    }
    public float getY(){
       // update();
        return _positionY;
    }


}
